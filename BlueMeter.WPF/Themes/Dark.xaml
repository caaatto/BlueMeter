<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Modern Dark HUD Theme with Neon Accents -->

    <!-- Background Colors (Very Dark Blue/Black-Gray) -->
    <Color x:Key="Background.Primary">#0A0E1A</Color>
    <Color x:Key="Background.Secondary">#12192B</Color>
    <Color x:Key="Background.Tertiary">#1A2332</Color>
    <Color x:Key="Background.Card">#151D2E</Color>
    <Color x:Key="Background.CardHover">#1C2738</Color>

    <!-- Neon Accent Colors -->
    <Color x:Key="Accent.Cyan">#00D9FF</Color>
    <Color x:Key="Accent.CyanDark">#00A8CC</Color>
    <Color x:Key="Accent.Purple">#A855F7</Color>
    <Color x:Key="Accent.PurpleDark">#8B3FD9</Color>
    <Color x:Key="Accent.Blue">#3B82F6</Color>

    <!-- Text Colors -->
    <Color x:Key="Text.Primary">#FFFFFF</Color>
    <Color x:Key="Text.Secondary">#D4DDE8</Color>
    <Color x:Key="Text.Tertiary">#8B95A8</Color>
    <Color x:Key="Text.Muted">#6B7280</Color>

    <!-- Border & Outline Colors -->
    <Color x:Key="Border.Default">#2A3547</Color>
    <Color x:Key="Border.Accent">#00D9FF</Color>
    <Color x:Key="Border.Glow">#00D9FF</Color>

    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource Background.Primary}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource Background.Secondary}" />
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource Background.Tertiary}" />
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="{StaticResource Background.Card}" />
    <SolidColorBrush x:Key="BackgroundCardHoverBrush" Color="{StaticResource Background.CardHover}" />

    <SolidColorBrush x:Key="AccentCyanBrush" Color="{StaticResource Accent.Cyan}" />
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource Accent.Purple}" />
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource Accent.Blue}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource Text.Primary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource Text.Secondary}" />
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource Text.Tertiary}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource Text.Muted}" />

    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{StaticResource Border.Default}" />
    <SolidColorBrush x:Key="BorderAccentBrush" Color="{StaticResource Border.Accent}" />

    <!-- Gradient Brushes (Cyan to Purple) -->
    <LinearGradientBrush x:Key="GradientCyanPurpleBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource Accent.Cyan}" Offset="0" />
        <GradientStop Color="{StaticResource Accent.Purple}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GradientCyanPurpleVerticalBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource Accent.Cyan}" Offset="0" />
        <GradientStop Color="{StaticResource Accent.Purple}" Offset="1" />
    </LinearGradientBrush>

    <!-- Semi-transparent brushes for overlays -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#80000000" Opacity="0.7" />

    <!-- Legacy compatibility -->
    <Color x:Key="Test.TextColor">#00FF00</Color>
    <SolidColorBrush x:Key="TestTextSolidBrush" Color="{StaticResource Test.TextColor}" />
    <Color x:Key="AccentColor">#00D9FF</Color>
    <SolidColorBrush x:Key="AccentSolidBrush" Color="{StaticResource AccentColor}" />

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Styles/Classes/Classes.Colors.Dark.xaml" />
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>