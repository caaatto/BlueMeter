<UserControl
    x:Class="BlueMeter.WPF.Controls.Footer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:BlueMeter.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlueMeter.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="50"
    d:DesignWidth="400"
    Background="#12192B"
    mc:Ignorable="d">

    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <!--  Avoid drawing UserControl default Background (square corners)  -->
            <ContentPresenter />
        </ControlTemplate>
    </UserControl.Template>

    <UserControl.Resources>
        <converters:ThemeBackgroundConverter x:Key="ThemeBackgroundConverter" />
        <converters:ThemeAccentConverter x:Key="ThemeAccentConverter" />

        <Style x:Key="FooterBorder" TargetType="Border">
            <Setter Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=dark}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=medium}" />
            <Setter Property="BorderThickness" Value="0,1,0,0" />
            <Setter Property="CornerRadius">
                <Setter.Value>
                    <CornerRadius
                        BottomLeft="{StaticResource MainCornerRadiusDouble}"
                        BottomRight="{StaticResource MainCornerRadiusDouble}"
                        TopLeft="0"
                        TopRight="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}"
                        BlurRadius="8"
                        ShadowDepth="0"
                        Opacity="0.1" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FooterGrid" TargetType="Grid">
            <Setter Property="Width" Value="100" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="30" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource FooterBorder}">
        <Grid Style="{StaticResource FooterGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="Confirm"
                Grid.Column="0"
                Click="Confirm_Click"
                Command="{Binding ConfirmCommand, ElementName=Root}"
                Style="{StaticResource ControlButton}">

                <Button.Content>
                    <Image Source="{StaticResource ImageOkNormal}" />
                </Button.Content>
            </Button>

            <Button
                x:Name="Cancel"
                Grid.Column="1"
                Click="Cancel_Click"
                Command="{Binding CancelCommand, ElementName=Root}"
                Style="{StaticResource ControlButton}">

                <Button.Content>
                    <Image Source="{StaticResource ImageCancelNormal}" />
                </Button.Content>
            </Button>
        </Grid>
    </Border>
</UserControl>
