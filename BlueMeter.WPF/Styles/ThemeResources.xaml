<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:BlueMeter.WPF.Converters">

    <!-- All Theme Converters - Centralized for easy access -->
    <converters:ThemeColorConverter x:Key="ThemeColorConverter" />
    <converters:ThemeColorOverlayConverter x:Key="ThemeColorOverlayConverter" />
    <converters:ThemeBackgroundConverter x:Key="ThemeBackgroundConverter" />
    <converters:ThemeAccentConverter x:Key="ThemeAccentConverter" />
    <converters:ThemeForegroundConverter x:Key="ThemeForegroundConverter" />
    <converters:ThemeToAppNameConverter x:Key="ThemeToAppNameConverter" />
    <converters:BackgroundImageConverter x:Key="BackgroundImageConverter" />
    <converters:PanelColorModeConverter x:Key="PanelColorModeConverter" />
    <converters:PanelContentColorModeConverter x:Key="PanelContentColorModeConverter" />

    <!-- Dynamic Theme-Aware Brushes that all styles can use -->
    <!-- These are static fallbacks; actual theming uses converters with bindings -->

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="ThemeDarkBackground" Color="#12192B" />
    <SolidColorBrush x:Key="ThemeMediumBackground" Color="#151D2E" />
    <SolidColorBrush x:Key="ThemeLightBackground" Color="#1C2738" />

    <!-- Accent/Border Brushes -->
    <SolidColorBrush x:Key="ThemeAccentBrush" Color="#00D9FF" />
    <SolidColorBrush x:Key="ThemeBorderBrush" Color="#2A3547" />

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="ThemeTextPrimary" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ThemeTextSecondary" Color="#B4BCD6" />
    <SolidColorBrush x:Key="ThemeTextTertiary" Color="#8B95A8" />

</ResourceDictionary>
