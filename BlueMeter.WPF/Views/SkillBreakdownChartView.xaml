<UserControl
    x:Class="BlueMeter.WPF.Views.SkillBreakdownChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BlueMeter.WPF.ViewModels"
    xmlns:oxy="http://oxyplot.org/wpf"
    d:DataContext="{d:DesignInstance Type=vm:SkillBreakdownChartViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="#1E1E1E"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Dark Theme Styles  -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#3F3F46" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="DarkLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,8,0" />
        </Style>

        <Style x:Key="StatusLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Player Selection Header  -->
        <Border
            Grid.Row="0"
            Padding="16,12"
            Background="#252526"
            BorderBrush="#3F3F46"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Player Selector  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource DarkLabel}" Text="Player:" />
                    <ComboBox
                        Width="200"
                        ItemsSource="{Binding AvailablePlayers}"
                        SelectedItem="{Binding SelectedPlayer}"
                        Style="{StaticResource DarkComboBox}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PlayerName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!--  Chart Info  -->
                <StackPanel
                    Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,16,0"
                        Foreground="#CCCCCC"
                        FontSize="12">
                        <Run Text="ðŸ“Š Top" />
                        <Run Text="{Binding TopSkillsLimit}" />
                        <Run Text="Skills" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!--  OxyPlot Chart  -->
        <oxy:PlotView
            Grid.Row="1"
            Model="{Binding PlotModel}"
            Background="#1E1E1E" />

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Padding="16,8"
            Background="#252526"
            BorderBrush="#3F3F46"
            BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource StatusLabel}"
                    Text="{Binding StatusText}" />

                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource StatusLabel}"
                    Text="Updates every 1 second" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
