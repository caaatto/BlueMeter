<Window
    x:Class="BlueMeter.WPF.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:BlueMeter.WPF.Controls"
    xmlns:converters="clr-namespace:BlueMeter.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hlp="clr-namespace:BlueMeter.WPF.Helpers"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:loc="clr-namespace:BlueMeter.WPF.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:BlueMeter.WPF.ViewModels"
    Title="{lex:Loc Key={x:Static loc:ResourcesKeys.App_Name}}"
    Width="1000"
    Height="650"
    MinWidth="830"
    MinHeight="520"
    d:DataContext="{d:DesignInstance Type=vms:MainViewModel}"
    lex:LocalizeDictionary.DesignCulture="en-US"
    lex:ResxLocalizationProvider.DefaultAssembly="BlueMeter.WPF"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    Style="{StaticResource TransparentWindow}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  WindowChrome: 开启可拉伸边界  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>

        <!-- Converters for theme customization -->
        <converters:ThemeColorConverter x:Key="ThemeColorConverter" />
        <converters:BackgroundImageConverter x:Key="BackgroundImageConverter" />
        <converters:ThemeColorOverlayConverter x:Key="ThemeColorOverlayConverter" />
        <converters:ThemeBackgroundConverter x:Key="ThemeBackgroundConverter" />
        <converters:ThemeAccentConverter x:Key="ThemeAccentConverter" />
        <converters:ThemeForegroundConverter x:Key="ThemeForegroundConverter" />
        <converters:ThemeToAppNameConverter x:Key="ThemeToAppNameConverter" />
        <converters:BackgroundOnlyModeOpacityConverter x:Key="BackgroundOnlyModeOpacityConverter" />
        <converters:IsEnabledToOpacityConverter x:Key="IsEnabledToOpacityConverter" />

        <Style x:Key="IconFont" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#IconFont" />
        </Style>

        <Style x:Key="MainContentBorder" TargetType="Border">
            <Setter Property="Padding" Value="10" />
        </Style>

        <Style x:Key="PluginListBorder" TargetType="Border">
            <Setter Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=dark}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Opacity" Value="{Binding DataContext.AppConfig.BackgroundOnlyMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BackgroundOnlyModeOpacityConverter}}" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeColorConverter}}"
                        BlurRadius="10"
                        ShadowDepth="0"
                        Opacity="0.2" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PluginDetailBorder" TargetType="Border">
            <Setter Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=dark}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Opacity" Value="{Binding DataContext.AppConfig.BackgroundOnlyMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BackgroundOnlyModeOpacityConverter}}" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeColorConverter}}"
                        BlurRadius="10"
                        ShadowDepth="0"
                        Opacity="0.2" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DetailTabControl" TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <ContentPresenter ContentSource="SelectedContent" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchBorder" TargetType="Border">
            <Setter Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=medium}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <Style
            x:Key="SeachIcon"
            BasedOn="{StaticResource IconFont}"
            TargetType="TextBlock">
            <Setter Property="Margin" Value="16,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}" />
        </Style>

        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="40" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeForegroundConverter}, ConverterParameter=text}" />
            <Setter Property="Padding" Value="50,0,5,0" />
            <Setter Property="FontSize" Value="16" />
        </Style>

        <Style x:Key="PluginListTitleBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=medium}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <Style
            x:Key="PluginListTitle"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeForegroundConverter}, ConverterParameter=label}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="20,10,10,10" />
        </Style>

        <Style x:Key="PluginListBox" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>

        <Style x:Key="PluginBorder" TargetType="Border">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Padding" Value="20,15,0,15" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style
            x:Key="PluginListName"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style
            x:Key="PluginListIntro"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeForegroundConverter}, ConverterParameter=label}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,25,0,0" />
        </Style>

        <Style
            x:Key="PluginListTip"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeForegroundConverter}, ConverterParameter=label}" />
        </Style>

        <Style x:Key="PluginStateBorderBase" TargetType="Border">
            <Setter Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=medium}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="13,3,13,3" />
            <Setter Property="Margin" Value="10,0,10,0" />
        </Style>

        <Style
            x:Key="PluginAutoStartBorder"
            BasedOn="{StaticResource PluginStateBorderBase}"
            TargetType="Border">
            <Setter Property="Margin" Value="10,0,10,10" />
        </Style>

        <Style
            x:Key="PluginEnableBorder"
            BasedOn="{StaticResource PluginStateBorderBase}"
            TargetType="Border" />

        <Style
            x:Key="PluginStateText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="9" />
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="PluginDetailTitleBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=medium}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="Padding" Value="20,10,20,10" />
        </Style>

        <Style
            x:Key="PluginDetailName"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeForegroundConverter}, ConverterParameter=text}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>

        <Style x:Key="AutoRunGrid" TargetType="Grid">
            <Setter Property="Margin" Value="0,38,0,0" />
        </Style>

        <Style
            x:Key="AutoRunText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeForegroundConverter}, ConverterParameter=label}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style x:Key="PluginButtonBase" TargetType="Border">
            <!-- <Setter Property="Width" Value="80" /> -->
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="36" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="6,0,6,0" />
        </Style>

        <Style
            x:Key="PluginTextBase"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style
            x:Key="PluginSettingButton"
            BasedOn="{StaticResource PluginButtonBase}"
            TargetType="Border">
            <Setter Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=medium}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=light}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style
            x:Key="PluginSettingText"
            BasedOn="{StaticResource PluginTextBase}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeForegroundConverter}, ConverterParameter=label}" />
        </Style>

        <Style
            x:Key="PluginRunButton"
            BasedOn="{StaticResource PluginButtonBase}"
            TargetType="Border">
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#00D9FF" Offset="0" />
                        <GradientStop Color="#A855F7" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="PluginRunText"
            BasedOn="{StaticResource PluginTextBase}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="PluginDetailIntroBorder" TargetType="Border">
            <Setter Property="Padding" Value="20,10,20,10" />
        </Style>

        <Style x:Key="PluginDetailIntroLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeForegroundConverter}, ConverterParameter=label}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <Style x:Key="PluginDetailIntroValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeForegroundConverter}, ConverterParameter=text}" />
            <Setter Property="FontSize" Value="12" />
        </Style>

    </Window.Resources>

    <!-- Modern Dark HUD Background -->
    <Border
        Style="{StaticResource ShadowWindowBorder}"
        Background="#0A0E1A">

        <!-- Background Image Layer (if configured) - overlayed with low opacity -->
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="0" />
        </Border.Effect>

        <Grid>
            <!-- Optional Background Image Layer (on top of theme color) -->
            <Border Panel.ZIndex="0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{x:Null}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding AppConfig.BackgroundOnlyMode}" Value="True">
                                <Setter Property="Background" Value="{Binding AppConfig.BackgroundImagePath, Converter={StaticResource BackgroundImageConverter}}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <!-- Theme Color Filter Overlay (over background image, behind UI) -->
            <Border Panel.ZIndex="1">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{x:Null}" />
                        <Style.Triggers>
                            <!-- Only show color filter when background image is active -->
                            <DataTrigger Binding="{Binding AppConfig.BackgroundOnlyMode}" Value="True">
                                <Setter Property="Background" Value="{Binding AppConfig.ThemeColor, Converter={StaticResource ThemeColorOverlayConverter}, ConverterParameter=0.2}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <!-- Main content grid -->
            <Grid Panel.ZIndex="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ctrl:Header Title="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeToAppNameConverter}}" Grid.Row="0" />

            <Border Grid.Row="1" Style="{StaticResource MainContentBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        x:Name="PluginListHost"
                        Grid.Column="0"
                        Style="{StaticResource PluginListBorder}">
                        <Border.OpacityMask>
                            <VisualBrush
                                AlignmentX="Left"
                                AlignmentY="Top"
                                Stretch="Fill">
                                <VisualBrush.Visual>
                                    <Border
                                        Width="{Binding ActualWidth, ElementName=PluginListHost}"
                                        Height="{Binding ActualHeight, ElementName=PluginListHost}"
                                        Background="Black"
                                        CornerRadius="{Binding CornerRadius, ElementName=PluginListHost}" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Border.OpacityMask>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Style="{StaticResource SearchBorder}">
                                <Grid>

                                    <TextBlock Style="{StaticResource SeachIcon}" Text="&#xe602;" />

                                    <TextBox
                                        x:Name="SearchBox"
                                        hlp:TextBoxHelper.Placeholder="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Plugin_Search_PlaceHolder}}"
                                        Style="{StaticResource SearchBox}" />

                                </Grid>
                            </Border>

                            <Border Grid.Row="1" Style="{StaticResource PluginListTitleBorder}">
                                <TextBlock Style="{StaticResource PluginListTitle}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_PluginList_Title}}" />
                            </Border>

                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <ListBox
                                    Grid.Row="0"
                                    ItemsSource="{Binding Plugins}"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    SelectedItem="{Binding SelectedPlugin, Mode=TwoWay}"
                                    Style="{StaticResource PluginListBox}">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="Margin" Value="5,5,5,5" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border
                                                            x:Name="bb"
                                                            Background="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=medium}"
                                                            BorderBrush="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=light}"
                                                            BorderThickness="1"
                                                            CornerRadius="8"
                                                            Padding="20,15,20,15"
                                                            Opacity="{Binding IsEnabled, Converter={StaticResource IsEnabledToOpacityConverter}}">
                                                            <ContentPresenter />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="bb" Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=light}" />
                                                                <Setter TargetName="bb" Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}" />
                                                                <Setter TargetName="bb" Property="BorderThickness" Value="2" />
                                                                <Setter TargetName="bb" Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect
                                                                            Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeColorConverter}}"
                                                                            BlurRadius="15"
                                                                            ShadowDepth="0"
                                                                            Opacity="0.5" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="bb" Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=light}" />
                                                                <Setter TargetName="bb" Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect
                                                                            Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}"
                                                                            BlurRadius="8"
                                                                            ShadowDepth="0"
                                                                            Opacity="0.3" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type vms:PluginListItemViewModel}">
                                            <Grid HorizontalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0">
                                                    <TextBlock Style="{StaticResource PluginListName}" Text="{Binding Name}" />
                                                    <TextBlock Style="{StaticResource PluginListIntro}" Text="{Binding Description}" />
                                                </Grid>

                                                <Grid Grid.Column="1">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Border Grid.Row="0" Style="{StaticResource PluginAutoStartBorder}">
                                                        <TextBlock Style="{StaticResource PluginStateText}" Text="{Binding AutoStartText}" />
                                                    </Border>
                                                    <Border Grid.Row="1" Style="{StaticResource PluginEnableBorder}">
                                                        <TextBlock Style="{StaticResource PluginStateText}" Text="{Binding RunningStateText}" />
                                                    </Border>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <ToggleButton
                                    Grid.Row="1"
                                    Margin="0,5,0,0"
                                    IsChecked="{Binding IsDebugTabActive, Mode=TwoWay}"
                                    Visibility="{Binding IsDebugContentVisible, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border
                                                x:Name="bb"
                                                Background="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=medium}"
                                                BorderBrush="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=light}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="20,15,20,15"
                                                Margin="5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Column="0">
                                                        <TextBlock Style="{StaticResource PluginListName}" Text="Debug Tab" />
                                                        <TextBlock Style="{StaticResource PluginListIntro}" Text="Humm... It's just for debug..." />
                                                    </Grid>

                                                    <Border Grid.Column="2" Style="{StaticResource PluginEnableBorder}">
                                                        <TextBlock Style="{StaticResource PluginStateText}" Text="Debug" />
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="bb" Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=light}" />
                                                    <Setter TargetName="bb" Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}" />
                                                    <Setter TargetName="bb" Property="BorderThickness" Value="2" />
                                                    <Setter TargetName="bb" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect
                                                                Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeColorConverter}}"
                                                                BlurRadius="15"
                                                                ShadowDepth="0"
                                                                Opacity="0.5" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bb" Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=light}" />
                                                    <Setter TargetName="bb" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect
                                                                Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}"
                                                                BlurRadius="8"
                                                                ShadowDepth="0"
                                                                Opacity="0.3" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <Border
                                    Grid.Row="2"
                                    Margin="0,5,0,0"
                                    Style="{StaticResource PluginBorder}">
                                    <TextBlock Style="{StaticResource PluginListTip}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Plugin_ThirdPartySdkTips}}" />
                                </Border>
                            </Grid>

                        </Grid>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource PluginDetailBorder}">
                        <Grid>
                            <ContentControl Content="{Binding SelectedPlugin}">
                                <ContentControl.Resources>
                                    <DataTemplate DataType="{x:Type vms:PluginListItemViewModel}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Border Grid.Row="0" Style="{StaticResource PluginDetailTitleBorder}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Column="0">
                                                        <TextBlock Style="{StaticResource PluginDetailName}" Text="{Binding Name}" />

                                                        <Grid Style="{StaticResource AutoRunGrid}">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <ctrl:SwitchControl
                                                                Grid.Column="0"
                                                                IsChecked="{Binding State.IsAutoStart, Mode=TwoWay}"
                                                                Command="{Binding ToggleAutoStartCommand}"
                                                                IsEnabled="{Binding IsEnabled}"
                                                                OffContent="{lex:Loc Key={x:Static loc:ResourcesKeys.Settings_Switch_Off}}"
                                                                OnContent="{lex:Loc Key={x:Static loc:ResourcesKeys.Settings_Switch_On}}" />

                                                            <TextBlock
                                                                Grid.Column="1"
                                                                Style="{StaticResource AutoRunText}"
                                                                Opacity="{Binding IsEnabled, Converter={StaticResource IsEnabledToOpacityConverter}}"
                                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Plugin_AutoStart}}" />
                                                        </Grid>
                                                    </Grid>

                                                    <Grid Grid.Column="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <Button Grid.Column="0" Command="{Binding OpenSettingsCommand}">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border x:Name="bb" Style="{StaticResource PluginSettingButton}">
                                                                        <TextBlock Style="{StaticResource PluginSettingText}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Plugin_Settings}}" />
                                                                    </Border>

                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="bb" Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=light}" />
                                                                            <Setter TargetName="bb" Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}" />
                                                                            <Setter TargetName="bb" Property="Effect">
                                                                                <Setter.Value>
                                                                                    <DropShadowEffect
                                                                                        Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}"
                                                                                        BlurRadius="10"
                                                                                        ShadowDepth="0"
                                                                                        Opacity="0.4" />
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>

                                                        <Button Grid.Column="1" Command="{Binding RunCommand}" RenderTransformOrigin="0.5,0.5" IsEnabled="{Binding IsEnabled}">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border x:Name="bb" Style="{StaticResource PluginRunButton}" RenderTransformOrigin="0.5,0.5" Opacity="{Binding IsEnabled, Converter={StaticResource IsEnabledToOpacityConverter}}">
                                                                        <Border.Effect>
                                                                            <DropShadowEffect
                                                                                Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}"
                                                                                BlurRadius="10"
                                                                                ShadowDepth="0"
                                                                                Opacity="0.3" />
                                                                        </Border.Effect>
                                                                        <TextBlock Style="{StaticResource PluginRunText}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.Common_Action_Open}}" />
                                                                    </Border>

                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="bb" Property="Effect">
                                                                                <Setter.Value>
                                                                                    <DropShadowEffect
                                                                                        Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}"
                                                                                        BlurRadius="20"
                                                                                        ShadowDepth="0"
                                                                                        Opacity="0.7" />
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                            <Setter TargetName="bb" Property="RenderTransform">
                                                                                <Setter.Value>
                                                                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05" />
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                    </Grid>
                                                </Grid>
                                            </Border>

                                            <Border Grid.Row="1" Style="{StaticResource PluginDetailIntroBorder}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Style="{StaticResource PluginDetailIntroLabel}"
                                                        Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Plugin_Label_Author}}" />
                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="2"
                                                        Style="{StaticResource PluginDetailIntroValue}"
                                                        Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Plugin_Author_OfficialTeam}}"
                                                        TextWrapping="Wrap" />

                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        Style="{StaticResource PluginDetailIntroLabel}"
                                                        Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Plugin_Label_Intro}}" />
                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="2"
                                                        Style="{StaticResource PluginDetailIntroValue}"
                                                        Text="{Binding Description}"
                                                        TextWrapping="Wrap" />
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ContentControl.Resources>
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedPlugin}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsDebugTabActive}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>

                            <Grid Background="Transparent" Visibility="{Binding IsDebugTabActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Style="{StaticResource PluginDetailTitleBorder}">
                                    <TextBlock Style="{StaticResource PluginDetailName}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Debug_Group_Title}}" />
                                </Border>

                                <Border Grid.Row="1" Style="{StaticResource PluginDetailIntroBorder}">
                                    <StackPanel Margin="10">
                                        <StackPanel>
                                            <ComboBox
                                                ItemsSource="{Binding AvailableThemes}"
                                                SelectedIndex="0"
                                                SelectedItem="{Binding Theme}" />
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Style="{StaticResource TestTextBlockStyle}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Debug_ThemeTest}}" />
                                            <Button Command="{Binding Debug.CallDebugWindowCommand}" Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Debug_Button_PcapTest}}" />
                                            <Button Command="{Binding CallSkillBreakdownViewCommand}" Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Debug_Button_SkillBreakdown}}" />
                                            <Button Command="{Binding CallDamageReferenceViewCommand}" Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Debug_Button_DamageReference}}" />
                                            <Button Command="{Binding CallSettingsViewCommand}" Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Debug_Button_Settings}}" />
                                            <Button Command="{Binding CallAboutViewCommand}" Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainView_Debug_Button_About}}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>

                </Grid>
            </Border>

                <ctrl:Footer
                    Grid.Row="2"
                    Height="50"
                    Background="Transparent"
                    CancelCommand="{Binding ShutdownCommand}"
                    ConfirmClick="Footer_OnConfirmClick" />

            </Grid>
        </Grid>
    </Border>

</Window>

