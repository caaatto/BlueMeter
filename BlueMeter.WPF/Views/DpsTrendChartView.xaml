<UserControl
    x:Class="BlueMeter.WPF.Views.DpsTrendChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:vm="clr-namespace:BlueMeter.WPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:DpsTrendChartViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#1E1E1E"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  OxyPlot Chart  -->
        <oxy:PlotView
            Grid.Row="0"
            Model="{Binding PlotModel}"
            Background="#1E1E1E" />

        <!--  Info/Status Bar  -->
        <Border
            Grid.Row="1"
            Padding="12,8"
            Background="#252526"
            BorderBrush="#3F3F46"
            BorderThickness="0,1,0,0">
            <TextBlock
                FontSize="11"
                Foreground="#888888"
                Text="Real-time DPS tracking • Updates every 500ms • Data collected every 200ms" />
        </Border>
    </Grid>
</UserControl>
