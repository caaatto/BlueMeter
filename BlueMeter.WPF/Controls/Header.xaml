<UserControl
    x:Class="BlueMeter.WPF.Controls.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:BlueMeter.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlueMeter.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:ThemeBackgroundConverter x:Key="ThemeBackgroundConverter" />
        <converters:ThemeAccentConverter x:Key="ThemeAccentConverter" />

        <Style x:Key="HeaderBorder" TargetType="Border">
            <Setter Property="Background" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=dark}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeBackgroundConverter}, ConverterParameter=medium}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="CornerRadius">
                <Setter.Value>
                    <CornerRadius
                        BottomLeft="0"
                        BottomRight="0"
                        TopLeft="{StaticResource MainCornerRadiusDouble}"
                        TopRight="{StaticResource MainCornerRadiusDouble}" />
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        Color="{Binding DataContext.AppConfig.ThemeColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThemeAccentConverter}}"
                        BlurRadius="8"
                        ShadowDepth="0"
                        Opacity="0.1" />
                </Setter.Value>
            </Setter>

            <EventSetter Event="MouseLeftButtonDown" Handler="Header_MouseLeftButtonDown" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Height" Value="30" />
        </Style>

        <Style x:Key="HeaderTitle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#SAO Welcome TT, pack://application:,,,/Assets/Fonts/#阿里妈妈数黑体" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
    </UserControl.Resources>
    <Border Style="{StaticResource HeaderBorder}">
        <Grid>
            <TextBlock Style="{StaticResource HeaderTitle}" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:Header}}" />
        </Grid>
    </Border>
</UserControl>